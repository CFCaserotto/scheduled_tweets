<%= form_with model: @tweet do |form| %>
  <%= render "shared/form_errors", form: form %>
  <div class="mb-3">
      <%= form.label :twitter_account_id %>
      <%= form.collection_select :twitter_account_id, Current.user.twitter_accounts, :id, :username, {}, class:"form-control"%>
      <%= link_to "Connect your twitter account", twitter_accounts_path, class:"btn btn-primary"  %>
  </div>
  <div class="mb-3">
    <%= form.label :body %>
    <%= form.text_area :body, class: "form-content" %>
  </div>
  <div class="mb-3">
    <%= form.label :publish_at %>
    <div class="class-control">
      <%= form.datetime_select :publish_at %>
    </div>
  </div>

  <%= form.button "Schedule", class: "btn btn-primary" %>

  <% if form.object.persisted? %>
    <%= link_to "Destroy", form.object, data: {
                    turbo_method: :delete,
                    turbo_confirm: "Are you sure?"
                  }, class: "btn btn-outline-danger"  %>
  <% end %>  
<% end %>